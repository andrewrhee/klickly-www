<div class='modal fade'>
  <div class="modal-dialog">
    <div class="modal-content">
      <form class="form">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Merchant Information</h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label class="control-label" for="firstName">Name</label>
            <div class="controls">
              <div class="row">
                <div class="col-lg-6">
                  <input type="text" class="form-control" name="firstName" placeholder="First Name"/>
                </div>
                <div class="col-lg-6">
                  <input type="text" class="form-control" name="lastName" placeholder="Last Name"/>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-lg-6">
              <label class="control-label" for="dateOfBirth">Date of Birth</label>
              <div class="controls">
                <input type="text" class="form-control" name="dateOfBirth" value="" placeholder="1980-10-09"/>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-lg-6">
              <label class="control-label" for="routingNumber">Routing Number</label>
              <div class="controls">
                <input type="text" class="form-control" name="routingNumber" value=""/>
              </div>
            </div>
            <div class="form-group col-lg-6">
              <label class="control-label" for="accountNumber">Account Number</label>
              <div class="controls">
                <input type="text" class="form-control" name="accountNumber" value=""/>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label" for="address.streetAddress">Address</label>
            <div class="controls">
              <input type="text" class="form-control" name="address.streetAddress" value="{{client.address.street1}}" placeholder="Street"/>
            </div>
          </div>
          <div class="form-group">
            <div class="controls">
              <input type="text" class="form-control" name="address.extendedAddress" value="{{client.address.street2}}" placeholder="Apt or Unit #"/>
            </div>
          </div>
          <div class="row">
            <div class="form-group col-lg-7">
              <div class="controls">
                <input type="text" class="form-control" name="address.locality" value="{{client.address.city}}" placeholder="City"/>
              </div>
            </div>
            <div class="form-group col-lg-2">
              <div class="controls">
                <input type="text" class="form-control" name="address.region" value="{{client.address.state}}" placeholder="State"/>
              </div>
            </div>
            <div class="form-group col-lg-3">
              <div class="controls">
                <input type="text" class="form-control" name="address.postalCode" value="{{client.address.postalCode}}" placeholder="Zip Code"/>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal" aria-hidden="true">Cancel</button>
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>